<%- include('../partials/head.ejs') %>
<div class="container">
    <h1>New Summary</h1>
    <p><a href="/logs"/><i class="bi bi-arrow-left-short"></i>Back</a></p>
    <form action="/logs" method="post">

        <div class="card">
            <div class="card-body">
            <label for="date">Date</label>
 
            <input type="date" name="date" id="date" />

            <p class="mt-3 display-4">Products</p>
                <ul class="ps-0">
                    <% for (let i = 0; i < products.length ; i++) { const product = products[i] %>
                        <li class="fs-3">
                            <input 
                            type="checkbox"
                            name="productIds[<%= i %>]"
                            id="productIds-<%= i %>"
                            value="<%= product._id %>" /> 
                            <labelfor="productIds-<%= i %>">
                            <%= product.kind %>: <%= product.name %></label>
                        </li>
                    <% } %>
                </ul>
            </div>
          </div>



  


        <textarea class="form-control" rows="5" name="description" id="description"> </textarea>
    
        <input class="mt-2 btn btn-outline-dark btn-md" type="submit" value="Create" />
    </form>
</div>

